{
  "name": "n8n-nodes-home-assistant-websocket",
  "version": "0.1.0",
  "description": "n8n node to trigger workflows based on Home Assistant events via WebSocket",
  "keywords": [
    "n8n-community-node-package",
    "home-assistant",
    "websocket",
    "trigger",
    "automation"
  ],
  "license": "MIT",
  "homepage": "https://github.com/yourusername/n8n-nodes-home-assistant-websocket",
  "author": {
    "name": "Kamil Bednarek",
    "email": "kamil@nexilo.uk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/n8n-nodes-home-assistant-websocket.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && cp -r src/nodes/home-assistant.svg dist/nodes/",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "lintfix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js src"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/HomeAssistantWebSocketApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/HomeAssistantTrigger.node.js",
      "dist/nodes/TestNode.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-plugin-n8n-nodes-base": "^1.11.0",
    "gulp": "^4.0.2",
    "n8n-core": "^0.125.0",
    "n8n-workflow": "^0.107.0",
    "prettier": "^2.7.1",
    "typescript": "~4.8.4"
  },
  "dependencies": {
    "ws": "^8.13.0"
  }
} 